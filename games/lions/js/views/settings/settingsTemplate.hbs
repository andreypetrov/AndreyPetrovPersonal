{{! {"styles" : ["js/views/settings/settings"]} }}
<div class="lion-settings-container">

    <div class="lion-settings">
        <ul>
            <li>
                <input id="settings-repeating-digits" class="lion-input-checkbox" type="checkbox"/>
                <label for="settings-repeating-digits" name="repeating-numbers-label" class="css-label">Repeating digits allowed</label>
            </li>
            <li>
                <input id="settings-leading-zeros" class="lion-input-checkbox" type="checkbox"/>
                <label for="settings-leading-zeros" name="repeating-numbers-label" class="css-label">Leading zeros allowed</label>
            </li>

            <li>
                <input id="settings-digits-count" class="lion-input-number" type="number" placeholder="#"/>
                <label for="settings-digits-count" name="repeating-numbers-label" class="">Digits count</label>
            </li>

        </ul>
    </div>

    <!-- Checkbox powered by CssCheckbox.com -->

</div>



