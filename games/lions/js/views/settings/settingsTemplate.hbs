{{! {"styles" : ["js/views/settings/settings"]} }}
<div class="lion-settings-container">

    <div class="lion-settings">
        <ul>
            <li>
                <input id="settings-repeating-digits" class="lion-input-checkbox" type="checkbox" {{checked attributes.hasRepeatingDigits}}/>
                <label for="settings-repeating-digits" name="repeating-numbers-label" class="css-label lion-settings-label">Repeating digits allowed</label>
            </li>
            <li>
                <input id="settings-leading-zeros" class="lion-input-checkbox" type="checkbox" {{checked attributes.hasLeadingZeros}}/>
                <label for="settings-leading-zeros" name="repeating-numbers-label" class="css-label lion-settings-label">Leading zeros allowed</label>
            </li>

            <li>
                <input id="settings-digits-count" class="lion-input-number" type="number" placeholder="#" value="{{attributes.digitsCount}}"/>
                <label for="settings-digits-count" name="repeating-numbers-label" class="lion-settings-label">Digits count</label>
            </li>

        </ul>


        <div class="back-button margin-centered"></div>
    </div>

    <!-- Checkbox powered by CssCheckbox.com -->

</div>



